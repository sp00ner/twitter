<h1>Listing tweets</h1>
<ul>
    <% @tweets.each do |tweet| %>
      <li>
        <%= div_for tweet do %>
            <%= tweet.name %><br/>
            <%= tweet.message %><br/>
            <%= link_to 'Show', tweet %>
            <%= link_to 'Edit', edit_tweet_path(tweet) %>
            <%= link_to 'Destroy', tweet, :method => :delete, :remote => true %>
        <% end %>
      </li>
    <% end %>
</ul>


<br />

<%= link_to 'New Tweet', new_tweet_path %>
